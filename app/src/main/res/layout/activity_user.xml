<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.onestap.onestapsdk.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/icon_onestap_brand" />

        <com.onestap.core.view.ui.widget.OSTButton
            android:id="@+id/btn_get_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_small"
            android:text="Get User"
            />

        <EditText
            android:id="@+id/edit_user_json"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="16sp"
            android:minLines="10"
            />

    </LinearLayout>

</ScrollView>
